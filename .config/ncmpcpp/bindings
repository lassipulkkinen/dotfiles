# ~/.config/ncmpcpp/bindings

# Mouse

def_key "mouse"
  mouse_event

# Movement

## Scroll one

def_key "j"
  scroll_down

def_key "k"
  scroll_up

## Scroll album

def_key "["
  scroll_up_album

def_key "]"
  scroll_down_album

## Scroll artist

def_key "{"
  scroll_up_artist

def_key "}"
  scroll_down_artist

## Scroll page

def_key "ctrl-f"
  page_down

def_key "ctrl-b"
  page_up

## Top / bottom

def_key "g"
  move_home

def_key "G"
  move_end

## Directories

def_key "enter"
  enter_directory

def_key "backspace"
  jump_to_parent_directory

def_key "ctrl-h"
  jump_to_parent_directory

## Info

def_key "i"
  show_song_info

def_key "I"
  show_artist_info

## Search

def_key "/"
  find

def_key "/"
  find_item_forward

def_key "?"
  find

def_key "?"
  find_item_backward

def_key "."
  next_found_item

def_key ","
  previous_found_item

def_key "w"
  toggle_find_mode

def_key "y"
  start_searching

def_key "ctrl-_"
  select_found_items

